<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">



    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="54dp"
        android:text="분석 결과"
        android:textColor="#222222"
        android:fontFamily="@font/spoqa_bold"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="409dp"
        android:layout_height="600dp"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="317dp"
                android:layout_height="336dp"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.278"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/spoqa_regular"
                android:text="밀가루 \n설탕 \n쇼트닝 \n동물성유지 \n식물성유지 \n코코아분말 \글리세린 \nD-소비톨액 \n전란액 \n산도조절제I \n합성향료 \n산도조절제II \n구연산"
                android:textColor="@color/black"
                android:textSize="22dp"
                app:layout_constraintTop_toBottomOf="@id/imageView2"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/close"
                    android:layout_width="182dp"
                    android:layout_height="59dp"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/bin_gray"
                    android:drawablePadding="-50dp"
                    android:enabled="true"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="닫기"


                    android:textColor="#666666"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"


                    app:layout_constraintTop_toBottomOf="@id/text"

                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="182dp"
                    android:layout_height="59dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/bin_blue"
                    android:drawablePadding="-50dp"
                    android:enabled="true"
                    android:fontFamily="@font/spoqa_medium"
                    android:text="저장"
                    android:textColor="#ffffff"


                    android:textSize="18dp"


                    app:layout_constraintTop_toTopOf="parent"

                     />
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>